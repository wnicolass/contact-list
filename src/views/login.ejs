<%- include('includes/head.ejs') %> <%- include('includes/nav.ejs') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Sign Up or Sign In</h1>
      <p class="text-center lead">
        Welcome! Sign in or create your account below!
      </p>
      <div class="row">
        <div class="col-lg">
          <h4>Sign Up</h4>
          <p>
            If you don't have an account yet, please fill out the form below.
          </p>
          <form action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="form-group">
              <label for="email-sign-up">Email address</label>
              <input
                type="email"
                class="form-control"
                id="email-sign-up"
                aria-describedby="emailHelp"
                placeholder="Enter your email..."
                name="email"
              />
              <small id="emailHelp" class="form-text text-muted"
                >We'll never share your email with anyone else.</small
              >
            </div>
            <div class="form-group">
              <label for="password-sign-up">Password</label>
              <input
                type="password"
                class="form-control"
                id="password-sign-up"
              />
            </div>
            <button type="submit" class="btn btn-primary">Regist</button>
          </form>
        </div>

        <div class="col-lg-1"></div>

        <div class="col-lg">
          <h4>Sign In</h4>
          <p>If you already have an account, sign in and view your contacts.</p>
          <form action="/login/logged" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="form-group">
              <label for="email">Email address</label>
              <input
                type="email"
                class="form-control"
                id="email"
                aria-describedby="emailHelp"
                placeholder="Enter your email..."
                name="email"
              />
              <small id="emailHelp" class="form-text text-muted"
                >We'll never share your email with anyone else.</small
              >
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" id="password" />
            </div>
            <button type="submit" class="btn btn-primary">Sign In</button>
          </form>
        </div>
      </div>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer.ejs') %>
